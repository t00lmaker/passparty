<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

<div class="justify-content-between mb-4">
  <h1 class="d-inline-block mr-3">Lista de Presentes</h1><br>
  <a href="/guests" class="btn btn-primary"><i class="bi bi-card-list"></i>Lista de Convidados</a>
  <a href="/confirmations/export"  class="btn btn-primary"><i class="bi-box-arrow-down"></i> Exportar Lista</a>
</div>

<style>
.table-striped>tbody>tr:nth-child(odd)>td, 
.table-striped>tbody>tr:nth-child(odd)>th {
   background-color: rgba(10, 173, 254, 0.08);
 }

 #guestTable th, #guestTable td {
  text-align: center;
} 
</style>
<table id="guestTable" class="table table-striped">
  <thead class="thead">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Celular</th>
      <th scope="col">Confirmado em</th>
    </tr>
  </thead>
  <tbody>
    <% @confirmations.each do |confirmation| %>
      <tr>
        <td><%= confirmation.guest.name %></td>
        <td><%= confirmation.guest.phone %></td>
        <td><%= confirmation.details_confirm %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<script>

$(document).ready( function () {
  $('#guestTable').DataTable({
      "pageLength": 25,
      language: {
        url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese.json'
      }
  });
});

</script>